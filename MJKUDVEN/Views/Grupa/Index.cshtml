@using MJKUDVEN.Models
@model IEnumerable<Grupa>

@{
    ViewBag.Title = "Lista Grup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="font-family:Arial, Helvetica, sans-serif">
    <h2>Lista Grup</h2>

    <ul>
        @foreach (Grupa grupa in Model)
        {
            <li>@Html.ActionLink(grupa.Nazwa, "Index", "KontaktyDB", new { GrupaId = grupa.Id }, null)</li>
        }
    </ul>
</div>